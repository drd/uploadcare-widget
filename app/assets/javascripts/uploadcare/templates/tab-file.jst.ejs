<div class="uploadcare-dialog-file-drop-area" role="uploadcare-drop-area">
  <div class="uploadcare-dialog-file-title uploadcare-if-draganddrop">
    <%- t('dialog.tabs.file.drag') %>
  </div>
  <div class="uploadcare-dialog-file-title uploadcare-if-no-draganddrop">
    <%- t('dialog.tabs.file.nodrop') %>
  </div>
  <div class="uploadcare-dialog-file-or uploadcare-if-draganddrop">
    <%- t('dialog.tabs.file.or') %>
  </div>
  <div class="uploadcare-dialog-big-button" role="uploadcare-dialog-browse-file">
    <%- t('dialog.tabs.file.button') %>
  </div>
  <% if (tabs.length > 1) { %>
    <div class="uploadcare-dialog-file-or">
      <%- t('dialog.tabs.file.also') %>
    </div>
    <div class="uploadcare-dialog-file-sources">
      <% for (var i = 0; i < tabs.length; i++) {
        var tab = tabs[i];
        if (tab == 'file') continue; %>
        <div
          class="uploadcare-dialog-file-source"
          role="uploadcare-dialog-switch-tab"
          data-tab="<%- tab %>"
        ><%- t('dialog.tabs.names.' + tab) %></div>
      <% } %>
    </div>
  <% } %>
</div>
